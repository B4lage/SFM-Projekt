<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.Menu?>
<?import javafx.scene.control.MenuBar?>
<?import javafx.scene.control.MenuItem?>
<?import javafx.scene.control.RadioButton?>
<?import javafx.scene.control.SeparatorMenuItem?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.control.ToggleGroup?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>


<VBox alignment="CENTER" fillWidth="false" stylesheets="@application.css" xmlns="http://javafx.com/javafx/16" xmlns:fx="http://javafx.com/fxml/1" fx:controller="hu.unideb.inf.controller.AddMealController">
   <children>
      <AnchorPane prefHeight="720.0" prefWidth="1080.0">
         <children>
            <MenuBar prefHeight="30.0" prefWidth="1080.0" style="-fx-background-color: black;">
               <menus>
                  <Menu mnemonicParsing="false" text="Felhasználó">
                     <items>
                        <MenuItem mnemonicParsing="false" onAction="#menuHandleAdataimPushed" text="Adataim" />
                        <SeparatorMenuItem mnemonicParsing="false" />
                        <MenuItem mnemonicParsing="false" onAction="#menuHandleKijelentkezesButtonClicked" text="Kijelentkezés" />
                     </items>
                  </Menu>
                  <Menu mnemonicParsing="false" text="Navigáció">
                     <items>
                        <MenuItem mnemonicParsing="false" onAction="#menuHandleFooldalButtonClicked" text="Főoldal" />
                     </items>
                  </Menu>
                  <Menu mnemonicParsing="false" text="Súgó">
                     <items>
                        <MenuItem mnemonicParsing="false" onAction="#menuHandleLeirasButtonClicked" text="Leírás" />
                     </items>
                  </Menu>
               </menus>
            </MenuBar>
            <Label layoutX="434.0" layoutY="58.0" text="Étkezés hozzáadása">
               <font>
                  <Font size="24.0" />
               </font>
            </Label>
            <Button layoutX="482.0" layoutY="545.0" onAction="#handleOKButtonClicked" text="Vissza">
               <font>
                  <Font size="15.0" />
               </font>
            </Button>
            <Label layoutX="319.0" layoutY="120.0" text="Mit ettél:">
               <font>
                  <Font size="17.0" />
               </font>
            </Label>
            <TableView fx:id="mealsTable" layoutX="319.0" layoutY="158.0" onMouseClicked="#onMouseClicked" prefHeight="284.0" prefWidth="449.0">
               <columns>
                  <TableColumn fx:id="Tname" prefWidth="146.0" text="Név" />
                  <TableColumn fx:id="Tfat" prefWidth="49.0" text="zsír" />
                  <TableColumn fx:id="Tkcal" minWidth="0.0" prefWidth="57.0" text="kcal/100" />
                  <TableColumn fx:id="Tprot" prefWidth="56.0" text="fehérje" />
                  <TableColumn fx:id="Tch" prefWidth="75.0" text="szénhidrát" />
                  <TableColumn fx:id="Tportion" prefWidth="88.0" text="adag" />
               </columns>
            </TableView>
            <Label layoutX="147.0" layoutY="480.0" text="Mennyit ettél:">
               <font>
                  <Font size="17.0" />
               </font>
            </Label>
            <TextField fx:id="mitEvett" layoutX="408.0" layoutY="121.0" onKeyReleased="#searchInTable" />
            <TextField fx:id="mennyitEvett" layoutX="268.0" layoutY="481.0" prefHeight="25.0" prefWidth="61.0" />
            <RadioButton fx:id="gml" layoutX="341.0" layoutY="485.0" mnemonicParsing="false" text="g/ml">
               <toggleGroup>
                  <ToggleGroup fx:id="egyseg" />
               </toggleGroup>
            </RadioButton>
            <RadioButton fx:id="adag" layoutX="340.0" layoutY="506.0" mnemonicParsing="false" text="adag" toggleGroup="$egyseg" />
            <Button layoutX="630.0" layoutY="479.0" mnemonicParsing="false" onAction="#switchToCreateNewMeal" text="Saját étel hozzáadása">
               <font>
                  <Font size="14.0" />
               </font>
            </Button>
            <Button layoutX="426.0" layoutY="479.0" mnemonicParsing="false" onAction="#handleHozzaadomANapomhozButtonClicked" text="Hozzáadom a napomhoz">
               <font>
                  <Font size="14.0" />
               </font>
            </Button>
         </children>
      </AnchorPane>
   </children>
</VBox>
