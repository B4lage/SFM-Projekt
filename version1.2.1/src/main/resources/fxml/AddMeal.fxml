<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.RadioButton?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.control.ToggleGroup?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<VBox alignment="CENTER" fillWidth="false" prefHeight="584.0" prefWidth="879.0" spacing="20.0" stylesheets="@application.css" xmlns="http://javafx.com/javafx/15.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="hu.unideb.inf.controller.AddMealController">
    <children>
      <AnchorPane prefHeight="596.0" prefWidth="839.0">
         <children>
            <Label layoutX="126.0" layoutY="14.0" text="Étkezés hozzáadása">
               <font>
                  <Font size="17.0" />
               </font>
            </Label>
              <Button layoutX="403.0" layoutY="481.0" onAction="#handleOKButtonClicked" text="OK">
               <font>
                  <Font size="15.0" />
               </font>
            </Button>
            <Label layoutX="24.0" layoutY="60.0" text="Mit ettél:">
               <font>
                  <Font size="17.0" />
               </font>
            </Label>
            <TableView fx:id="mealsTable" layoutX="351.0" layoutY="50.0" onMouseClicked="#onMouseClicked" prefHeight="260.0" prefWidth="472.0">
              <columns>
                <TableColumn fx:id="Tname" prefWidth="132.0" text="Név" />
                <TableColumn fx:id="Tfat" prefWidth="58.0" text="zsír" />
                  <TableColumn fx:id="Tkcal" minWidth="0.0" prefWidth="62.0" text="kcal/100" />
                  <TableColumn fx:id="Tprot" prefWidth="56.0" text="fehérje" />
                  <TableColumn fx:id="Tch" prefWidth="77.0" text="szénhidrát" />
                  <TableColumn fx:id="Tportion" prefWidth="86.0" text="adag" />
              </columns>
            </TableView>
            <Label layoutX="24.0" layoutY="210.0" text="Mennyit ettél:">
               <font>
                  <Font size="17.0" />
               </font>
            </Label>
            <TextField fx:id="mitEvett" layoutX="140.0" layoutY="61.0" onKeyReleased="#searchInTable" />
            <TextField fx:id="mennyitEvett" layoutX="140.0" layoutY="211.0" />
            <RadioButton fx:id="gml" layoutX="298.0" layoutY="215.0" mnemonicParsing="false" text="g/ml">
               <toggleGroup>
                  <ToggleGroup fx:id="egyseg" />
               </toggleGroup>
            </RadioButton>
            <RadioButton fx:id="adag" layoutX="298.0" layoutY="247.0" mnemonicParsing="false" text="adag" toggleGroup="$egyseg" />
            <Button layoutX="222.0" layoutY="325.0" mnemonicParsing="false" onAction="#switchToCreateNewMeal" text="Saját étel hozzáadása">
               <font>
                  <Font size="14.0" />
               </font>
            </Button>
            <Button layoutX="24.0" layoutY="325.0" mnemonicParsing="false" onAction="#handleHozzaadomANapomhozButtonClicked" text="Hozzáadom a napomhoz">
               <font>
                  <Font size="14.0" />
               </font>
            </Button>
         </children>
      </AnchorPane>
    </children>
    <padding>
        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
    </padding>
</VBox>
